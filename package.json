{
	"name": "ts-directly",
	"version": "1.0.1",
	"description": "Let Node execute TypeScript files directly, support SWC, esbuild, and tsc compilers",
	"license": "MIT",
	"author": "Kaciras <Kaciras@outlook.com>",
	"repository": {
		"type": "git",
		"url": "https://github.com/Kaciras/ts-directly"
	},
	"keywords": [
		"loader",
		"compiler",
		"node",
		"esm",
		"typescript"
	],
	"engines": {
		"node": ">=18.19"
	},
	"type": "module",
	"exports": {
		".": {
			"default": "./lib/loader.js",
			"types": "./lib/loader.d.ts"
		},
		"./register": "./lib/register.js"
	},
	"files": [
		"lib/*.{js,d.ts}"
	],
	"scripts": {
		"build": "tsc",
		"test": "node --import ./lib/register.js --test test/*.spec.ts"
	},
	"dependencies": {
		"tsconfck": "^3.0.3"
	},
	"devDependencies": {
		"@kaciras/eslint-config-core": "^3.0.1",
		"@kaciras/eslint-config-typescript": "^3.0.1",
		"@types/node": "^20.12.12",
		"@types/tar-fs": "^2.0.4",
		"esbench": "^0.2.1",
		"eslint": "^9.3.0",
		"tar-fs": "^3.0.6"
	},
	"peerDependencies": {
		"@swc/core": "^1.5.5",
		"esbuild": "^0.21.1",
		"typescript": "^5.4.5"
	},
	"peerDependenciesMeta": {
		"esbuild": {
			"optional": true
		},
		"@swc/core": {
			"optional": true
		},
		"typescript": {
			"optional": true
		}
	}
}
